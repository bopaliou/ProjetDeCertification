{% block title %}Connexion{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/"
         integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p"
          crossorigin="anonymous"/>
{% endblock %}
{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    <center><div class="container" style="margin:20px;"></center> 
        <center><div class="card bg-light" style="width:470px;">
        <div class="card-head">
            <center><h1 class="h3 mb-3 font-weight-normal">Connexion</h1></center>
        </div>
        <div class="card-body">
            <label for="inputEmail">Email</label> <br>
            <i class="fas fa-at"></i><input type="email" value="{{ last_username }}" name="email" id="inputEmail"
             class="form-control" autocomplete="email" required autofocus> <br>
            <label for="inputPassword">Password</label> <br>
            <i class="fas fa-lock"></i><input type="password" name="password" id="inputPassword"
             class="form-control" autocomplete="current-password" required> <br>

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}

            <button class="btn btn-lg btn-primary" type="submit">
                Se connecter
            </button>
        </div>
    </div></center>
   
    </div>
    
</form>
{% endblock %}
